# Smart PDF Toolkit Environment Configuration

# API Configuration
SMART_PDF_HOST=0.0.0.0
SMART_PDF_PORT=8000
SMART_PDF_DEBUG=false
SMART_PDF_LOG_LEVEL=INFO

# File Processing Configuration
SMART_PDF_OUTPUT_DIR=./output
SMART_PDF_TEMP_DIR=./temp
SMART_PDF_UPLOAD_DIR=./uploads
SMART_PDF_MAX_FILE_SIZE=104857600  # 100MB in bytes
SMART_PDF_ALLOWED_EXTENSIONS=pdf,docx,xlsx,pptx,txt,md

# AI Services Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000

# Database Configuration (Optional)
DATABASE_URL=postgresql://smart_pdf_user:password@localhost:5432/smart_pdf_toolkit
POSTGRES_DB=smart_pdf_toolkit
POSTGRES_USER=smart_pdf_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=smart-pdf-toolkit-storage

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@smart-pdf-toolkit.com

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Configuration
RELOAD=true
WORKERS=1

# Production Configuration
# RELOAD=false
# WORKERS=4
# SMART_PDF_DEBUG=false
# SMART_PDF_LOG_LEVEL=WARNING